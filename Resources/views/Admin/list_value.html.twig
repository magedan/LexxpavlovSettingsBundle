{% extends get_admin_template('base_list_field', admin.code) %}
{% block field %}
{% apply spaceless %}
    {% if object.type is constant('Lexxpavlov\\SettingsBundle\\DBAL\\SettingsType::Boolean') %}
        {% if object.value %}
            <i class="fa fa-check"></i> {% trans %}On{% endtrans %}
        {% else %}
            <i class="fa fa-times"></i> {% trans %}Off{% endtrans %}
        {% endif %}
    {% else %}
        {{ object.value[:80] }}
    {% endif %}
{% endapply %}
{% endblock %}